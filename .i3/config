bindsym $mod+3 workspace 3: tmux
bindsym $mod+4 workspace 4: torrent
bindsym $mod+5 workspace 5: virtualbox
bindsym $mod+6 workspace 6: pwsafe
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8

# move focused container to workspace
bindsym $mod+Shift+exclam 		move workspace 1: www
bindsym $mod+Shift+at 			move workspace 2: aftershot
bindsym $mod+Shift+numbersign 	move workspace 3: tmux
bindsym $mod+Shift+dollar 		move workspace 4: torrent
bindsym $mod+Shift+percent 		move workspace 5: virtualbox
bindsym $mod+Shift+asciicircum 	move workspace 6: pwsafe
